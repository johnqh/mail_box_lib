{
  "name": "@johnqh/lib",
  "version": "3.4.14",
  "description": "React Native-compatible shared utilities library for 0xmail.box projects with Optional<T> type safety patterns and comprehensive blockchain integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:coverage:threshold": "vitest run --coverage --reporter=verbose",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:watch": "chokidar \"src/**/*.{ts,tsx}\" -c \"npm run lint\"",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "check-all": "npm run lint && npm run typecheck && npm run test:run",
    "quick-check": "npm run lint && npm run typecheck",
    "analyze:health": "node scripts/ai/analyze-health.js",
    "analyze:deps": "npm outdated && npm audit",
    "analyze:types": "tsc --noEmit --strict --skipLibCheck",
    "quality-check": "node scripts/quality-check.js",
    "quality-report": "npm run quality-check && cat .quality-report.json",
    "performance-check": "node scripts/performance-monitor.js",
    "performance-report": "npm run performance-check && cat .performance-report.json",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:api": "npm run docs:generate && open docs/API.md",
    "validate": "npm run quality-check",
    "dev": "npm run build:watch",
    "create:service": "node scripts/create-service.js",
    "create:hook": "node scripts/create-hook.js",
    "create:type": "node scripts/create-type.js",
    "create:test": "node scripts/create-test.cjs",
    "analyze": "npm run typecheck && npm run lint && npm run test:coverage",
    "analyze:size": "npm run build && du -sh dist/",
    "docs": "typedoc --out docs/api src/index.ts",
    "types:validate": "tsc --noEmit --strict",
    "types:extract": "tsc --declaration --emitDeclarationOnly --outDir temp-types && rm -rf temp-types",
    "types:check": "npm run types:validate && echo 'âœ… All types valid'",
    "analyze:code": "node scripts/analyze-code.cjs",
    "health:monitor": "node scripts/health-monitor.cjs",
    "health:watch": "node scripts/health-monitor.cjs --continuous",
    "ecosystem:sync": "node scripts/ecosystem/cross-project-sync.js",
    "ecosystem:live": "node scripts/ecosystem/live-dev-environment.js",
    "production:monitor": "node scripts/ecosystem/production-monitor.js",
    "production:watch": "node scripts/ecosystem/production-monitor.js monitor",
    "docs:site": "node scripts/docs/generate-docs-site.js",
    "optimize": "node scripts/optimization/intelligent-optimizer.js",
    "optimize:watch": "node scripts/optimization/intelligent-optimizer.js --watch",
    "intelligence:self-healing": "node scripts/intelligence/self-healing-monitor.js",
    "intelligence:ai-assistant": "node scripts/intelligence/ai-code-assistant.js",
    "intelligence:ai-generate": "node scripts/intelligence/ai-code-assistant.js generate",
    "intelligence:ai-refactor": "node scripts/intelligence/ai-code-assistant.js refactor",
    "learning:pattern-recognition": "node scripts/learning/pattern-recognition-engine.js",
    "learning:predict": "node scripts/learning/pattern-recognition-engine.js predict",
    "automation:orchestrator": "node scripts/automation/dynamic-orchestrator.js",
    "automation:predictive": "node scripts/automation/predictive-optimizer.js",
    "automation:cross-platform": "node scripts/automation/cross-platform-orchestrator.js",
    "phase5:all": "concurrently \"npm run intelligence:self-healing\" \"npm run learning:pattern-recognition\" \"npm run automation:orchestrator\"",
    "ai:help": "echo 'AI Development Help - Phase 5 Intelligent Automation:' && echo '- npm run quick-check: Fast validation' && echo '- npm run create:type: Generate interface' && echo '- npm run create:hook: Generate new hook' && echo '- npm run create:test: Generate test file' && echo '- npm run test:coverage: Run tests with coverage' && echo '- npm run types:check: Validate types' && echo '- npm run analyze:code: Project analysis' && echo '- npm run health:monitor: Health monitoring' && echo '- npm run analyze:deps: Check dependencies' && echo '- npm run ecosystem:sync: Cross-project sync' && echo '- npm run production:monitor: Production monitoring' && echo '- npm run docs:site: Generate documentation' && echo '- npm run optimize: Intelligent optimization' && echo '- npm run intelligence:self-healing: Self-healing infrastructure' && echo '- npm run intelligence:ai-assistant: AI code assistance' && echo '- npm run learning:pattern-recognition: Machine learning models' && echo '- npm run automation:predictive: Predictive maintenance' && echo '- npm run automation:cross-platform: Multi-platform orchestration' && echo '- npm run phase5:all: Start all Phase 5 systems' && echo 'See CLAUDE.md for full guide'"
  },
  "keywords": [
    "web3",
    "email",
    "blockchain",
    "typescript",
    "utilities",
    "react-native",
    "optional-types",
    "type-safety",
    "ai-development",
    "cross-platform",
    "solana",
    "ethereum",
    "dependency-injection"
  ],
  "author": "0xmail.box team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typedoc": "^0.28.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@bonfida/spl-name-service": "^3.0.16",
    "@johnqh/di": "^1.4.5",
    "@johnqh/indexer_client": "^0.0.18",
    "@johnqh/mail_box_contracts": "^1.9.0",
    "@johnqh/types": "^1.8.20",
    "@johnqh/wildduck_client": "^0.0.11",
    "@tanstack/react-query": "^5.90.1",
    "react": "^19.2.0",
    "viem": "^2.38.0"
  },
  "dependencies": {
    "zustand": "^5.0.8"
  },
  "overrides": {
    "bigint-buffer": "1.1.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xmail/mail_box_lib.git"
  },
  "bugs": {
    "url": "https://github.com/0xmail/mail_box_lib/issues"
  },
  "homepage": "https://github.com/0xmail/mail_box_lib#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
