{
  "name": "@johnqh/lib",
  "version": "2.1.1",
  "description": "React Native-compatible shared utilities and common functions for 0xmail.box projects",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest --watch",
    "test:run": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,md}",
    "typecheck": "tsc --noEmit",
    "check-all": "npm run lint && npm run typecheck && npm run test:run",
    "dev": "npm run build:watch",
    "create:service": "node scripts/create-service.js",
    "analyze": "npm run typecheck && npm run lint && npm run test:coverage",
    "docs": "typedoc --out docs/api src/index.ts"
  },
  "keywords": [
    "web3",
    "email",
    "blockchain",
    "typescript",
    "utilities",
    "react-native"
  ],
  "author": "0xmail.box team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.2.66",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "react": "^19.1.1"
  },
  "dependencies": {
    "@bonfida/spl-name-service": "^3.0.16",
    "@noble/hashes": "^1.8.0",
    "@solana/web3.js": "^1.98.4",
    "@tanstack/react-query": "^5.85.9",
    "axios": "^1.11.0",
    "bs58": "^6.0.0",
    "firebase": "^12.1.0",
    "viem": "^2.36.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xmail/mail_box_lib.git"
  }
}
