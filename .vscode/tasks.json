{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Watch",
      "type": "npm",
      "script": "build:watch",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Test",
      "type": "npm",
      "script": "test:run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "Test Watch",
      "type": "npm", 
      "script": "test",
      "group": "test",
      "isBackground": true,
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint Fix",
      "type": "npm",
      "script": "lint:fix",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      }
    },
    {
      "label": "Type Check",
      "type": "npm",
      "script": "typecheck",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Format",
      "type": "npm",
      "script": "format",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      }
    },
    {
      "label": "Clean",
      "type": "npm",
      "script": "clean",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      }
    },
    {
      "label": "Full Check",
      "dependsOrder": "sequence",
      "dependsOn": ["Lint", "Type Check", "Test"],
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "AI: Quick Check",
      "type": "npm",
      "script": "quick-check",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": [
        "$eslint-stylish",
        "$tsc"
      ]
    },
    {
      "label": "AI: Full Validation",
      "type": "npm", 
      "script": "check-all",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": [
        "$eslint-stylish",
        "$tsc"
      ]
    },
    {
      "label": "AI: Create Hook",
      "type": "shell",
      "command": "npm run create:hook ${input:hookName} ${input:hookType}",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "AI: Create Type",
      "type": "shell", 
      "command": "npm run create:type ${input:typeName} ${input:typeKind}",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "AI: Code Analysis",
      "type": "shell",
      "command": "node scripts/analyze-code.cjs",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "hookName", 
      "description": "Hook name (e.g. useMyFeature)",
      "default": "useMyFeature",
      "type": "promptString"
    },
    {
      "id": "hookType",
      "description": "Hook type",
      "default": "indexer",
      "type": "pickString",
      "options": [
        "indexer",
        "wildduck"
      ]
    },
    {
      "id": "typeName",
      "description": "Type name (e.g. UserProfile)", 
      "default": "MyInterface",
      "type": "promptString"
    },
    {
      "id": "typeKind",
      "description": "Type kind",
      "default": "interface",
      "type": "pickString", 
      "options": [
        "service",
        "data", 
        "api",
        "interface"
      ]
    }
  ]
}