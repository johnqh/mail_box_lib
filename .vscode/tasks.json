{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Watch",
      "type": "npm",
      "script": "build:watch",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Test",
      "type": "npm",
      "script": "test:run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "Test Watch",
      "type": "npm", 
      "script": "test",
      "group": "test",
      "isBackground": true,
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint Fix",
      "type": "npm",
      "script": "lint:fix",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      }
    },
    {
      "label": "Type Check",
      "type": "npm",
      "script": "typecheck",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Format",
      "type": "npm",
      "script": "format",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      }
    },
    {
      "label": "Clean",
      "type": "npm",
      "script": "clean",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared"
      }
    },
    {
      "label": "Full Check",
      "dependsOrder": "sequence",
      "dependsOn": ["Lint", "Type Check", "Test"],
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "dedicated"
      }
    }
